        }*/

            table th; {
                background-color: #b8e0f7;
                border-width: 1px;
                padding: 8px;
                border-style: solid;
                border-color: #999999;
                color: black;
            }

            table th a {
                color: black;
            }


            .table tfoot {
                text-align: center;
            }
    </style>
